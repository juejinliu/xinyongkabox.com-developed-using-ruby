<!DOCTYPE html>
<html>
<head>
  <title>DealNow</title>
  <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    <h1><%= link_to "Deals Here", "/" %>

      <small><%= link_to "Hot Deals", '/deals' %></small>
      <div class="pull-right">
        <% if session["user_id"].present? %>
          <small>Hello, <%= User.find_by(id: session["user_id"]).name %></small>
          <small><%= link_to "My Account",user_url(User.find_by(id: session["user_id"])) %> </small>
          <small><%= link_to "Sign Out", '/logout' %></small>
        
        <% else %>
          <small><%= link_to "Sign Up", '/signup' %></small>
          <small><%= link_to "Sign In", '/login' %></small>

        <% end %>
      </div>

    </h1>

    <% if notice.present? %>
      <div class="alert alert-info"%>
        <%= notice %>
      </div>
    <% end %>

    <%= yield %>

  </div>

</body>
</html>
